<h2>Twotes</h2>

<form id = "addingTwote" action = "/addingTwote" method = "POST">
	<input id = "twoteInput"  type = "text">
	<input type = "submit" action = "submit" value = "Add Twote">
</form>
<div id = "twoteslist">
	{{#each twote}}
	<div class = "twotes" name = "{{authorId}}">

		<span>{{message}} </span><br>
		<div class = "authorNameInTwote"> - {{author}}</div>
		<button id = {{this._id}} class = "removeTwote"> Delete </button>
	</div>
	{{/each}}
</div>


<div id = "authorsList">
	<h2>Users </h2>

	{{#each twoteUser}}
		<div class = "author" id = "{{this._id}}">
			{{userName}}
		</div> <br>
	{{/each}}

</div>